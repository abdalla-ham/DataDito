@model Web.NetDataDito.Models.DashboardViewModel


@{
    Layout = null;
    <!-- Disable the main layout -->
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Dashboard</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        body {
            background-color: #f5f5f5;
            font-family: Arial, sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .dashboard-container {
            display: flex;
            flex-direction: column;
            align-items: flex-start;
            gap: 20px;
        }

        .usage-card {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: flex-start;
            background: #fff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            width: 300px;
        }

        .usage-title {
            font-size: 18px;
            font-weight: bold;
            margin-bottom: 10px;
        }

        .progress-bar-container {
            width: 100%;
            height: 20px;
            background-color: #ccc;
            border-radius: 10px;
            overflow: hidden;
        }

        .progress-bar {
            height: 100%;
            background-color: #28a745;
        }

        .usage-details {
            margin-top: 10px;
            font-size: 14px;
            color: #666;
        }

        .logo {
            margin-top: 50px;
            text-align: center;
        }

            .logo img {
                width: 100px;
            }
    </style>
</head>
<body>
    <div class="dashboard-container">
        <div class="usage-card">
            <div class="usage-title">Data</div>
            <div class="progress-bar-container">
                <div class="progress-bar" style="width: @(Model.UsedData * 100 / Model.TotalData)%"></div>
            </div>
            <div class="usage-details">Used @Model.UsedData GB / @Model.TotalData GB</div>
        </div>

        <div class="usage-card">
            <div class="usage-title">Minutes</div>
            <div class="progress-bar-container">
                <div class="progress-bar" style="width: @(Model.UsedMinutes * 100 / Model.TotalMinutes)%"></div>
            </div>
            <div class="usage-details">Used @Model.UsedMinutes Minutes / @Model.TotalMinutes Minutes</div>
        </div>

        <div class="usage-card">
            <div class="usage-title">SMS</div>
            <div class="progress-bar-container">
                <div class="progress-bar" style="width: @(Model.UsedSMS * 100 / Model.TotalSMS)%"></div>
            </div>
            <div class="usage-details">Used @Model.UsedSMS SMS / @Model.TotalSMS SMS</div>
        </div>
    </div>

    <div class="logo">
        <img src="~/images/Logo.png" alt="DataDito Logo" />
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
