@model Web.NetDataDito.Models.ForgotPasswordViewModel

@{
    Layout = null; <!-- Disable the main layout -->
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Forgot Password</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f5f5f5;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .form-container {
            background: white;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            width: 400px;
            text-align: center;
        }

        .form-container img {
            width: 100px;
            margin-bottom: 20px;
        }

        .btn-recovery {
            background-color: #800000;
            color: white;
            border: none;
            padding: 10px 20px;
            font-size: 16px;
            cursor: pointer;
        }

        .btn-recovery:hover {
            background-color: #990000;
        }
    </style>
</head>
<body>
    <div class="form-container">
        <img id="logo" src="img/Logo.png" alt="Logo">
        <h3>Forgot Password</h3>
        <form asp-action="ForgotPassword" method="post">
            <div class="mb-3">
                <input asp-for="NationalID" class="form-control" placeholder="National ID" />
                <span asp-validation-for="NationalID" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <input asp-for="Email" class="form-control" placeholder="Email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-recovery">Send Recovery Email</button>
        </form>
       
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        $(document).ready(function () {
            // UI işlemleri için buraya ekleme yapılabilir.
        });
    </script>
</body>
</html>
